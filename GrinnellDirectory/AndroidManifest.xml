<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.grinnell.appdev.grinnelldirectory"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_launcher_dark"
        android:label="@string/app_name"
        android:theme="@style/Theme.Grinnelldb" >
        <activity
            android:name=".SearchFormActivity"
            android:label="@string/title_activity_search_form" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ProfileListActivity"
            android:label="@string/title_profile_list" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".SearchFormActivity" />
        </activity>
        <activity
            android:name=".ProfileDetailActivity"
            android:label="@string/title_profile_detail" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ProfileListActivity" />
        </activity>
        <activity
            android:name=".RequesttaskActivity"
            android:label="@string/title_activity_requesttask" >
        </activity>
    </application>

</manifest>